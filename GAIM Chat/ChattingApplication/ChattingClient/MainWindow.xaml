<Window x:Class="ChattingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChattingClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="WelcomeLabel">
        <Button x:Name="LoginButton" Content="Login" Margin="147,11.5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="LoginButton_Click"/>
        <TextBox x:Name="UserNameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextDisplayTextBox" Margin="10,54"/>
        <Button x:Name="SendButton" Content="Send" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="68.535" Height="24" IsDefault="True" Click="SendButton_Click"/>
        <TextBox x:Name="MessageTextBox" Height="23" Margin="10,0,97.035,11" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <Label x:Name="label" HorizontalAlignment="Right" Margin="0,4.183,10,0" VerticalAlignment="Top" Width="139.993" FontSize="16" AutomationProperties.IsRequiredForForm="True" Content="" AutomationProperties.IsRowHeader="True"/>
    </Grid>
</Window>
